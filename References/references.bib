	journal = {Atmospheric Chemistry and Physics},
	author = {Moseid, Kine Onsum and Schulz, Michael and Storelvmo, Trude and Julsrud, Ingeborg Rian and Olivié, Dirk and Nabat, Pierre and Wild, Martin and Cole, Jason N. S. and Takemura, Toshihiko and Oshima, Naga and Bauer, Susanne E. and Gastineau, Guillaume},
