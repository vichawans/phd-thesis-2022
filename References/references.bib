@article{biassMultiscaleRiskAssessment2014,
	title = {A multi-scale risk assessment for tephra fallout and airborne concentration from multiple {Icelandic} volcanoes – {Part} 1: {Hazard} assessment},
	volume = {14},
	issn = {1684-9981},
	shorttitle = {A multi-scale risk assessment for tephra fallout and airborne concentration from multiple {Icelandic} volcanoes – {Part} 1},
