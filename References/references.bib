@article{allenInterhemisphericAerosolRadiative2015,
	title = {Interhemispheric {Aerosol} {Radiative} {Forcing} and {Tropical} {Precipitation} {Shifts} during the {Late} {Twentieth} {Century}},
	volume = {28},
