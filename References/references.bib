	keywords = {NorESM2, model description},
	pages = {6165--6200},
}

@article{tegenGlobalAerosolClimate2019,
	title = {The global aerosol–climate model {ECHAM6}.3–{HAM2}.3 – {Part} 1: {Aerosol} evaluation},
