	author = {Giannakopoulos, C. and Chipperfield, M. P. and Law, K. S. and Pyle, J. A.},
	year = {1999},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1029/1999JD900392},
	pages = {23761--23784},
