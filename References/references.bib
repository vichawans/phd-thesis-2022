	author = {Bauer, Susanne E. and Tsigaridis, Kostas and Faluvegi, Greg and Kelley, Maxwell and Lo, Ken K. and Miller, Ron L. and Nazarenko, Larissa and Schmidt, Gavin A. and Wu, Jingbo},
