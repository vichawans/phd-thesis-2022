@article{neubauerGlobalAerosolClimate2019,
	title = {The global aerosol–climate model {ECHAM6}.3–{HAM2}.3 – {Part} 2: {Cloud} evaluation, aerosol radiative forcing, and climate sensitivity},
	volume = {12},
	issn = {1991-959X},
	shorttitle = {The global aerosol–climate model {ECHAM6}.3–{HAM2}.3 – {Part} 2},
	url = {https://gmd.copernicus.org/articles/12/3609/2019/},
	doi = {10.5194/gmd-12-3609-2019},
	abstract = {{\textless}p{\textgreater}{\textless}strong class="journal-contentHeaderColor"{\textgreater}Abstract.{\textless}/strong{\textgreater} The global aerosol–climate model ECHAM6.3–HAM2.3 (E63H23) as well as the previous model versions ECHAM5.5–HAM2.0 (E55H20) and ECHAM6.1–HAM2.2 (E61H22) are evaluated using global observational datasets for clouds and precipitation. In E63H23, the amount of low clouds, the liquid and ice water path, and cloud radiative effects are more realistic than in previous model versions. E63H23 has a more physically based aerosol activation scheme, improvements in the cloud cover scheme, changes in the detrainment of convective clouds, changes in the sticking efficiency for the accretion of ice crystals by snow, consistent ice crystal shapes throughout the model, and changes in mixed-phase freezing; an inconsistency in ice crystal number concentration (ICNC) in cirrus clouds was also removed. Common biases in ECHAM and in E63H23 (and in previous ECHAM–HAM versions) are a cloud amount in stratocumulus regions that is too low and deep convective clouds over the Atlantic and Pacific oceans that form too close to the continents (while tropical land precipitation is underestimated). There are indications that ICNCs are overestimated in E63H23.{\textless}/p{\textgreater} {\textless}p{\textgreater}Since clouds are important for effective radiative forcing due to aerosol–radiation and aerosol–cloud interactions (ERF{\textless}span class="inline-formula"{\textgreater}$_{\textrm{ari+aci}}${\textless}/span{\textgreater}) and equilibrium climate sensitivity (ECS), differences in ERF{\textless}span class="inline-formula"{\textgreater}$_{\textrm{ari+aci}}${\textless}/span{\textgreater} and ECS between the model versions were also analyzed. ERF{\textless}span class="inline-formula"{\textgreater}$_{\textrm{ari+aci}}${\textless}/span{\textgreater} is weaker in E63H23 ({\textless}span class="inline-formula"{\textgreater}−1.0{\textless}/span{\textgreater}\&thinsp;W\&thinsp;m{\textless}span class="inline-formula"{\textgreater}$^{\textrm{−2}}${\textless}/span{\textgreater}) than in E61H22 ({\textless}span class="inline-formula"{\textgreater}−1.2{\textless}/span{\textgreater}\&thinsp;W\&thinsp;m{\textless}span class="inline-formula"{\textgreater}$^{\textrm{−2}}${\textless}/span{\textgreater}) (or E55H20; {\textless}span class="inline-formula"{\textgreater}−1.1{\textless}/span{\textgreater}\&thinsp;W\&thinsp;m{\textless}span class="inline-formula"{\textgreater}$^{\textrm{−2}}${\textless}/span{\textgreater}). This is caused by the weaker shortwave ERF{\textless}span class="inline-formula"{\textgreater}$_{\textrm{ari+aci}}${\textless}/span{\textgreater} (a new aerosol activation scheme and sea salt emission parameterization in E63H23, more realistic simulation of cloud water) overcompensating for the weaker longwave ERF{\textless}span class="inline-formula"{\textgreater}$_{\textrm{ari+aci}}${\textless}/span{\textgreater} (removal of an inconsistency in ICNC in cirrus clouds in E61H22).{\textless}/p{\textgreater} {\textless}p{\textgreater}The decrease in ECS in E63H23 (2.5\&thinsp;K) compared to E61H22 (2.8\&thinsp;K) is due to changes in the entrainment rate for shallow convection (affecting the cloud amount feedback) and a stronger cloud phase feedback.{\textless}/p{\textgreater} {\textless}p{\textgreater}Experiments with minimum cloud droplet number concentrations (CDNCmin) of 40\&thinsp;cm{\textless}span class="inline-formula"{\textgreater}$^{\textrm{−3}}${\textless}/span{\textgreater} or 10\&thinsp;cm{\textless}span class="inline-formula"{\textgreater}$^{\textrm{−3}}${\textless}/span{\textgreater} show that a higher value of CDNCmin reduces ERF{\textless}span class="inline-formula"{\textgreater}$_{\textrm{ari+aci}}${\textless}/span{\textgreater} as well as ECS in E63H23.{\textless}/p{\textgreater}},
	language = {English},
