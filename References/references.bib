	journal = {Journal of Geophysical Research: Atmospheres},
	author = {Dibb, J. E. and Talbot, R. W. and Scheuer, E. M. and Blake, D. R. and Blake, N. J. and Gregory, G. L. and Sachse, G. W. and Thornton, D. C.},
