	title = {In-cloud oxidation of {SO2} by {O3} and {H2O2}: {Cloud} chamber measurements and modeling of particle growth},
	volume = {106},
	copyright = {Copyright 2001 by the American Geophysical Union.},
	issn = {2156-2202},
