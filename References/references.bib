@article{huaAtmosphericHydrogenPeroxide2008,
	title = {Atmospheric hydrogen peroxide and organic hydroperoxides during {PRIDE}-{PRD}'06, {China}: their concentration, formation mechanism and contribution to secondary aerosols},
