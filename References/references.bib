@article{dongClimatologyMidlatitudeContinental2006,
	title = {A {Climatology} of {Midlatitude} {Continental} {Clouds} from the {ARM} {SGP} {Central} {Facility}. {Part} {II}: {Cloud} {Fraction} and {Surface} {Radiative} {Forcing}},
