	number = {6},
	urldate = {2022-10-25},
	journal = {Journal of Geophysical Research: Atmospheres},
	author = {Allen, Hannah M. and Bates, Kelvin H. and Crounse, John D. and Kim, Michelle J. and Teng, Alexander P. and Ray, Eric A. and Wennberg, Paul O.},
	year = {2022},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1029/2021JD035702},
	keywords = {ATom mission, convection, deposition, hydroperoxides, photochemistry, remote atmosphere},
	pages = {e2021JD035702},
}

