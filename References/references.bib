	author = {Goss, Michael and Lindgren, Erik A. and Sheshadri, Aditi and Diffenbaugh, Noah S.},
	year = {2021},
	note = {\_eprint: https://agupubs.onlinelibrary.wiley.com/doi/pdf/10.1029/2020JD033358},
