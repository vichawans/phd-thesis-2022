@article{paneruCorrosionMechanismAlloy2013,
	title = {Corrosion {Mechanism} of {Alloy} 310 {Austenitic} {Steel} beneath {NaCl} {Deposit} under {Varying} {SO2} {Concentrations} in an {Oxy}-fuel {Combustion} {Atmosphere}},
