	author = {Schmidt, Anja and Witham, Claire S. and Theys, Nicolas and Richards, Nigel A. D. and Thordarson, Thorvaldur and Szpek, Kate and Feng, Wuhu and Hort, Matthew C. and Woolley, Alan M. and Jones, Andrew R. and Redington, Alison L. and Johnson, Ben T. and Hayward, Chris L. and Carslaw, Kenneth S.},
