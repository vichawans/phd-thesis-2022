@article{shahGlobalModelingCloud2020,
	title = {Global modeling of cloud water acidity, precipitation acidity, and acid inputs to ecosystems},
	volume = {20},
	issn = {1680-7316},
	url = {https://acp.copernicus.org/articles/20/12223/2020/},
	doi = {10.5194/acp-20-12223-2020},
	abstract = {{\textless}p{\textgreater}{\textless}strong class="journal-contentHeaderColor"{\textgreater}Abstract.{\textless}/strong{\textgreater} Cloud water acidity affects the atmospheric chemistry of sulfate and organic aerosol formation, halogen radical cycling, and trace metal speciation. Precipitation acidity including post-depositional inputs adversely affects soil and freshwater ecosystems. Here, we use the GEOS-Chem model of atmospheric chemistry to simulate the global distributions of cloud water and precipitation acidity as well as the total acid inputs to ecosystems from wet deposition. The model accounts for strong acids ({\textless}span class="inline-formula"{\textgreater}H$_{\textrm{2}}$SO$_{\textrm{4}}${\textless}/span{\textgreater}, {\textless}span class="inline-formula"{\textgreater}HNO$_{\textrm{3}}${\textless}/span{\textgreater}, and HCl), weak acids (HCOOH, {\textless}span class="inline-formula"{\textgreater}CH$_{\textrm{3}}$COOH{\textless}/span{\textgreater}, {\textless}span class="inline-formula"{\textgreater}CO$_{\textrm{2}}${\textless}/span{\textgreater}, and {\textless}span class="inline-formula"{\textgreater}SO$_{\textrm{2}}${\textless}/span{\textgreater}), and weak bases ({\textless}span class="inline-formula"{\textgreater}NH$_{\textrm{3}}${\textless}/span{\textgreater} as well as dust and sea salt aerosol alkalinity). We compile a global data set of cloud water pH measurements for comparison with the model. The global mean observed cloud water pH is {\textless}span class="inline-formula"{\textgreater}5.2±0.9{\textless}/span{\textgreater}, compared to {\textless}span class="inline-formula"{\textgreater}5.0±0.8{\textless}/span{\textgreater} in the model, with a range from 3 to 8 depending on the region. The lowest values are over East Asia, and the highest values are over deserts. Cloud water pH over East Asia is low because of large acid inputs ({\textless}span class="inline-formula"{\textgreater}H$_{\textrm{2}}$SO$_{\textrm{4}}${\textle