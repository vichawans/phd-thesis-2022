}

@article{robsonRoleAnthropogenicAerosol2022,
	title = {The {Role} of {Anthropogenic} {Aerosol} {Forcing} in the 1850–1985 {Strengthening} of the {AMOC} in {CMIP6} {Historical} {Simulations}},
