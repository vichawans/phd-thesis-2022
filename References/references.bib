@article{boichuLargescaleParticulateAir2019,
	title = {Large-scale particulate air pollution and chemical fingerprint of volcanic sulfate aerosols from the 2014\&amp;\#8211;2015 {Holuhraun} flood lava eruption of {B}\&amp;\#225;r\&amp;\#240;arbunga volcano ({Iceland})},
	volume = {19},
